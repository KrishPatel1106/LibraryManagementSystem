@model IEnumerable<LibraryManagementSystem.Models.Book>
@{
    ViewData["Title"] = "Books";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">📚 Manage Books</h2>

    <div class="text-end mb-3">
        <a asp-action="Add" class="btn btn-primary">➕ Add New Book</a>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@(book.IsAvailable ? "✅ Yes" : "❌ No")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-info">👁 View</a>
                        <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">🗑 Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">⬅️ Back to Dashboard</a>
</div>
