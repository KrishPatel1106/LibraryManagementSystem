@model LibraryManagementSystem.Models.Book
@{
    ViewData["Title"] = "Add Book";
}

<h2 class="mb-3 text-center">âž• Add New Book</h2>

<form asp-action="Add" method="post" class="card p-4 shadow-sm mx-auto" style="max-width:500px;">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Author</label>
        <input asp-for="Author" class="form-control" required />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/Books" class="btn btn-secondary">Cancel</a>
    </div>
</form>
