@model LibraryManagementSystem.Models.Transaction
@{
    ViewData["Title"] = "Issue Book";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">üìò Issue Book</h2>

    <form asp-action="Issue" method="post" class="card p-4 shadow">
        <div class="form-group mb-3">
            <label for="BookId" class="form-label">Select Book</label>
            <select asp-for="BookId" class="form-select">
                @foreach (var book in ViewBag.Books)
                {
                    <option value="@book.Id">@book.Title</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label for="MemberId" class="form-label">Select Member</label>
            <select asp-for="MemberId" class="form-select">
                @foreach (var m in ViewBag.Members)
                {
                    <option value="@m.Id">@m.Name</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-success">üì§ Issue</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">‚¨ÖÔ∏è Back</a>
    </form>
</div>
