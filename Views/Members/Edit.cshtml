@model LibraryManagementSystem.Models.Member
@{
    ViewData["Title"] = "Edit Member";
}

<h2 class="mb-3 text-center">✏️ Edit Member</h2>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm mx-auto" style="max-width:500px;">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/Members" class="btn btn-secondary">Cancel</a>
    </div>
</form>
