@model LibraryManagementSystem.Models.Member
@{
    ViewData["Title"] = "Add Member";
}

<h2 class="mb-3 text-center">âž• Add New Member</h2>

<form asp-action="Add" method="post" class="card p-4 shadow-sm mx-auto" style="max-width:500px;">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success">Save</button>
        <a href="/Members" class="btn btn-secondary">Cancel</a>
    </div>
</form>
